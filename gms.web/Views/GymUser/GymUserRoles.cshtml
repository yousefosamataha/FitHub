@model GymUserRolesViewModel;
@{
	ViewData["Title"] = localizer["staffslist"];
	bool IsRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
<form asp-action="UpdateUserRoles" asp-controller="Superadmin" method="post">
	<div class="card mt-4">
		<div class="card-header">
			<h2>@Model.UserName</h2>
			Add/Remove Roles
		</div>
		<div class="card-body">
			<input type="hidden" asp-for="UserId" />
			@for(int i =0; i < Model.Roles.Count; i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model.Roles[i].Text" />
					<input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
					<label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
						@Model.Roles[i].Text
					</label>
				</div>
			}
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="card-footer">
			<button type="submit" class="btn btn-icon btn-bg-light btn-light-primary btn-sm me-2" data-bs-toggle="tooltip" title="@localizer["save"]" data-bs-custom-class="tooltip-inverse">
				<i class="ki-solid ki-pencil fs-2"></i>
			</button>
			<a asp-action="GymUsers" asp-controller="Superadmin" class="btn btn-icon btn-bg-light btn-light-danger btn-sm" data-bs-toggle="tooltip" title="@localizer["cancel"]" data-bs-custom-class="tooltip-inverse">
				<i class="ki-solid ki-trash fs-2"></i>
			</a>
		</div>
	</div>
</form>
