@{
	ViewData["Title"] = localizer["add_new_class"];
	bool IsRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
	<!--begin::Toolbar-->
	<div id="kt_app_toolbar" class="app-toolbar pt-6 pb-2">
		<!--begin::Toolbar container-->
		<div id="kt_app_toolbar_container"
			 class="app-container container-fluid d-flex align-items-stretch">
			<!--begin::Toolbar wrapper-->
			<div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
				<!--begin::Page title-->
				<div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
					<!--begin::Title-->
					<h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bold fs-3 m-0">
						@localizer["add_new_class"]
					</h1>
					<!--end::Title-->
					<!--begin::Breadcrumb-->
					<ol class="breadcrumb text-muted fs-6 fw-semibold text-gray-600">
						<li class="breadcrumb-item text-gray-600"><a class="text-gray-600 text-hover-primary" href="#">@localizer["home"]</a></li>
						<li class="breadcrumb-item text-gray-600">@localizer["training_classes"]</li>
					</ol>
					<!--end::Breadcrumb-->
				</div>
				<!--end::Page title-->
			</div>
			<!--end::Toolbar wrapper-->
		</div>
		<!--end::Toolbar container-->
	</div>
	<!--end::Toolbar-->
	<!--begin::Content-->
	<div id="kt_app_content" class="app-content flex-column-fluid">
		<!--begin::Content container-->
		<div id="kt_app_content_container" class="app-container container-fluid">
			<!--begin::Card-->
			<div class="card card-flush col-7">
				<!--begin::Card header-->
				<div class="card-header">
					<div class="card-title">
						<h2>@localizer["class_info"]</h2>
					</div>
				</div>
				<!--end::Card header-->
				<!--begin::Card body-->
				<div class="card-body pt-0">
					<form id="add_new_class_form" class="form">
						<!--begin::Input group-->
						<div class="col mb-5 fv-row">
							<label class="required form-label ms-2">@localizer["class_name"]</label>
							<input type="text" class="form-control" name="ClassName" placeholder="@localizer["enter"] @localizer["class_name"] @localizer["here"]" />
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="col mb-5 fv-row">
							<label class="required form-label ms-2">@localizer["select_staff"]</label>
							<!--begin::Select-->
							<select class="form-select" data-control="select2" name="SelectedStaffId" data-hide-search="true" data-placeholder="@localizer["select_an_option"]">
								<option></option>
								<option value="1">Class Every Week</option>
								<option value="2">Class Every Month</option>
							</select>
							<!--end::Select-->
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="col mb-5 fv-row">
							<label class="required form-label ms-2">@localizer["select_location"]</label>
							<!--begin::Select-->
							<select class="form-select" data-control="select2" name="SelectedLocationId" data-hide-search="true" data-placeholder="@localizer["select_an_option"]">
								<option></option>
								<option value="1">Class Every Week</option>
								<option value="2">Class Every Month</option>
							</select>
							<!--end::Select-->
						</div>
						<!--end::Input group-->
						<!--begin::Input group-->
						<div class="col mb-5 fv-row">
							<label class="required form-label ms-2">@localizer["booking_fees"]</label>
							<input type="number" class="form-control" name="BookingFees" placeholder="@localizer["enter"] @localizer["booking_fees"] @localizer["here"]" min="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
						</div>
						<!--end::Input group-->
						<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-1 row-cols-lg-2">
							<!--begin::Input group-->
							<div class="col mb-5 fv-row">
								<label class="required form-label ms-2">@localizer["start_time"]</label>
								<input id="one" class="form-control" name="StartTime" placeholder="@localizer["enter"] @localizer["start_time"] @localizer["here"]" />
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="col mb-7 fv-row">
								<label class="required form-label ms-2">@localizer["end_time"]</label>
								<input id="two" class="form-control" name="EndTime" placeholder="@localizer["enter"] @localizer["end_time"] @localizer["here"]" />
							</div>
							<!--end::Input group-->
						</div>
						<div class="col d-flex justify-content-end px-5">
							<!--begin::Reset Button-->
							<button class="btn btn-light me-5" type="reset">@localizer["reset"]</button>
							<!--end::Reset Button-->
							<!--begin::Button-->
							<button type="submit" id="add_new_membership_form_submit" class="btn btn-primary">
								<span class="indicator-label">@localizer["save"]</span>
								<span class="indicator-progress">
									@localizer["please_wait"]...
									<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
								</span>
							</button>
							<!--end::Button-->
						</div>
					</form>
				</div>
				<!--end::Card header-->
			</div>
			<!--end::Card-->
		</div>
		<!--end::Content container-->
	</div>
	<!--end::Content-->
</div>
<!--end::Content wrapper-->

@section Scripts {
	<script type="module" src="~/assets/js/customJs/AddNewClass.js" asp-append-version="true"></script>

	<script>
		$("#one").flatpickr({
			enableTime: true,
			noCalendar: true,
			time_24hr: false,
			dateFormat: "h:i K",
		});

		$("#two").flatpickr({
			enableTime: true,
			noCalendar: true,
			time_24hr: false,
			dateFormat: "h:i K",
		});
	</script>
}