@using gms.common.Enums
@using gms.common.ViewModels.Workout
@model AddNewWorkoutPlanVM
@{
    ViewData["Title"] = localizer["add_new_workout_plan"];
    bool IsRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar pt-6 pb-2">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container"
             class="app-container container-fluid d-flex align-items-stretch">
            <!--begin::Toolbar wrapper-->
            <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bold fs-3 m-0">
                        @localizer["add_new_workout_plan"]
                    </h1>
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ol class="breadcrumb text-muted fs-6 fw-semibold text-gray-600">
                        <li class="breadcrumb-item text-gray-600"><a class="text-gray-600 text-hover-primary" href="#">@localizer["home"]</a></li>
                        <li class="breadcrumb-item text-gray-600">@localizer["workout_plans"]</li>
                    </ol>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar wrapper-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-fluid">
			<!--begin::Form-->
			<form id="add_new_workout_plan_form" class="form d-flex flex-column flex-lg-row gap-7 gap-lg-10">
				<div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
					<!--begin::Basic Information-->
					<div class="card card-flush">
						<!--begin::Card header-->
						<div class="card-header">
							<div class="card-title">
								<h2>@localizer["basic_info"]</h2>
							</div>
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-3 row-cols-lg-4">
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<label class="required form-label ms-2">@localizer["select_member"]</label>
									<select class="form-select" asp-for="@Model.CreateWorkoutPlan.GymMemberUserId" data-placeholder="@localizer["select_an_option"]">
										<option></option>
										@foreach (var m in Model.GymMembersList.Where(m => m.StatusId == StatusEnum.Active))
										{
											string test = "";
											@foreach (var a in m.GymMemberMembership.Membership.MembershipActivities)
											{
												test += "," + a.ActivityId.ToString();
											}
											<option value="@m.Id" data-image="@m.Image" data-email="@m.Email" data-test="@test">@m.FirstName @m.LastName</option>
										}
									</select>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<label class="required form-label ms-2">@localizer["select_level"]</label>
									<select class="form-select" asp-for="@Model.CreateWorkoutPlan.MemberLevelId" data-control="select2" data-hide-search="true" data-placeholder="@localizer["select_an_option"]">
										<option></option>
										<option value="1">@localizer["beginner"]</option>
										<option value="2">@localizer["intermediate"]</option>
										<option value="3">@localizer["advanced"]</option>
									</select>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<div class="col mb-5 mb-sm-0 mb-md-0 mb-lg-0 fv-row">
										<label class="required form-label ms-2">@localizer["start_date"]</label>
										<input class="form-control" asp-for="@Model.CreateWorkoutPlan.StartDate" placeholder="@localizer["enter"] @localizer["start_date"] @localizer["here"]" />
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<div class="col mb-5 mb-sm-0 mb-md-0 mb-lg-0 fv-row">
										<label class="required form-label ms-2">@localizer["end_date"]</label>
										<input class="form-control" asp-for="@Model.CreateWorkoutPlan.EndDate" placeholder="@localizer["enter"] @localizer["end_date"] @localizer["here"]" />
									</div>
								</div>
								<!--end::Input group-->
							</div>
							<!--begin::Input group-->
							<div>
								<label class="form-label ms-2">@localizer["description"]</label>
								<textarea class="form-control" asp-for="@Model.CreateWorkoutPlan.Description" data-kt-autosize="true" placeholder="@localizer["enter"] @localizer["description"] @localizer["here"]"></textarea>
							</div>
							<!--end::Input group-->
						</div>
						<!--end::Card header-->
					</div>
					<!--end::General Information-->
					<!--begin::Basic Information-->
					<div class="card card-flush">
						<!--begin::Card header-->
						<div class="card-header">
							<div class="card-title">
								<h2>@localizer["basic_info"]</h2>
							</div>
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<!--begin::Repeater-->
							<div id="kt_docs_repeater_advanced">
								<!--begin::Form group-->
								<div class="form-group">
									<div data-repeater-list="kt_docs_repeater_advanced">
										<div data-repeater-item>
											<div class="form-group row mb-5">
												<div class="col-md-4 mb-5">
													<!--begin::Input group-->
													<label class="form-label ms-2">@localizer["select_days"]</label>
													<!--begin::Select-->
													<select class="form-select SelectedDays" data-kt-repeater="select2" data-placeholder="@localizer["select_an_option"]" multiple="multiple">
														<option></option>
														<option value="1">@localizer["sunday"]</option>
														<option value="2">@localizer["monday"]</option>
														<option value="3">@localizer["tuesday"]</option>
														<option value="4">@localizer["wednesday"]</option>
														<option value="5">@localizer["thursday"]</option>
														<option value="6">@localizer["friday"]</option>
														<option value="7">@localizer["saturday"]</option>
													</select>
													<!--end::Select-->
													<!--end::Input group-->
												</div>
												<div class="col-md-3 mb-5">
													<!--begin::Input group-->
													<label class="form-label ms-2">@localizer["select_activity"]</label>
													<!--begin::Select-->
													<select class="form-select test ActivityId" data-kt-repeater="select2" data-placeholder="@localizer["select_an_option"]">
														<option></option>
														@foreach (var a in Model.ActivitiesList)
														{
															<option value="@a.Id">@a.Title</option>
														}
													</select>
													<!--end::Select-->
													<!--end::Input group-->
												</div>
												<div class="col-md-1 mb-5">
													<label class="form-label ms-2">@localizer["sets"]</label>
													<input type="number" class="form-control Sets" min="0" placeholder="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
												</div>
												<div class="col-md-1 mb-5">
													<label class="form-label ms-2">@localizer["reps"]</label>
													<input type="number" class="form-control Reps" min="0" placeholder="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
												</div>
												<div class="col-md-1 mb-5">
													<label class="form-label ms-2">@localizer["kg"]</label>
													<input type="number" class="form-control Kg" min="0" placeholder="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
												</div>
												<div class="col-md-1 mb-5">
													<label class="form-label ms-2">@localizer["rest"]</label>
													<input type="text" class="form-control Rest" min="0" placeholder="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
												</div>
												<div class="col-md-1">
													<a href="javascript:;" data-repeater-delete class="btn btn-icon btn-bg-light btn-light-danger btn-sm mt-10" style="align-self: flex-start;">
														<i class="ki-solid ki-trash fs-2"></i>
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
								<!--end::Form group-->
								<!--begin::Form group-->
								<div class="form-group">
									<a href="javascript:;" data-repeater-create class="btn btn-flex btn-light-success">
										<i class="ki-duotone ki-plus fs-3"></i>
										@localizer["add"]
									</a>
								</div>
								<!--end::Form group-->
							</div>
							<!--end::Repeater-->
						</div>
						<!--end::Card body-->
					</div>
					<!--end::General Information-->
					<div class="d-flex justify-content-end px-5">
						<!--begin::Reset Button-->
						<button class="btn btn-light me-5" type="reset">@localizer["reset"]</button>
						<!--end::Reset Button-->
						<!--begin::Button-->
						<button type="submit" id="add_new_workout_plan_form_submit" class="btn btn-primary">
							<span class="indicator-label">@localizer["save"]</span>
							<span class="indicator-progress">
								@localizer["please_wait"]...
								<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
							</span>
						</button>
						<!--end::Button-->
					</div>
				</div>
			</form>
			<!--end::Form-->
		</div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
<!--end::Content wrapper-->

@section Scripts {
	<script type="module" src="~/assets/js/customJs/Workout/AddNewWorkoutPlan.js" asp-append-version="true"></script>
}