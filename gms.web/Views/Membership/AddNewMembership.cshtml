@using gms.common.ViewModels.Membership
@model MembershipVM
@{
	ViewData["Title"] = localizer["add_new_membership"];
	bool IsRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
	<!--begin::Toolbar-->
	<div id="kt_app_toolbar" class="app-toolbar" style="padding-top: 10px;">
		<!--begin::Toolbar container-->
		<div id="kt_app_toolbar_container"
			 class="app-container container-fluid d-flex align-items-stretch">
			<!--begin::Toolbar wrapper-->
			<div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100 px-5">
				<!--begin::Page title-->
				<div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
					<!--begin::Title-->
					<h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bold fs-3 m-0">
						@localizer["add_new_membership"]
					</h1>
					<!--end::Title-->
					<!--begin::Breadcrumb-->
					<ol class="breadcrumb text-muted fs-6 fw-semibold text-gray-600">
						<li class="breadcrumb-item text-gray-600"><a class="text-gray-600 text-hover-primary" href="#">@localizer["home"]</a></li>
						<li class="breadcrumb-item text-gray-600">@localizer["memberships"]</li>
					</ol>
					<!--end::Breadcrumb-->
				</div>
				<!--end::Page title-->
			</div>
			<!--end::Toolbar wrapper-->
		</div>
		<!--end::Toolbar container-->
	</div>
	<!--end::Toolbar-->
	<!--begin::Content-->
	<div id="kt_app_content" class="app-content flex-column-fluid">
		<!--begin::Content container-->
		<div id="kt_app_content_container" class="app-container container-fluid">
			<!--begin::Form-->
			<form id="add_new_membership_form" class="form d-flex flex-column flex-lg-row gap-7 gap-lg-10">
				<!--begin::Aside column-->
				<div class="d-flex flex-column gap-7 gap-lg-10 w-100 min-w-300px w-lg-300px">
					<!--begin::Status-->
					<div class="card card-flush">
						<!--begin::Card header-->
						<div class="card-header">
							<!--begin::Card title-->
							<div class="card-title">
								<h2>@localizer["status"]</h2>
							</div>
							<!--end::Card title-->
							<!--begin::Card toolbar-->
							<div class="card-toolbar">
								<div class="rounded-circle bg-success w-15px h-15px" id="membership_status"></div>
							</div>
							<!--begin::Card toolbar-->
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<!--begin::Select2-->
							<select class="form-select mb-2" data-control="select2" data-hide-search="true" data-placeholder="Select an option" asp-for="@Model.MembershipStatusId">
								<option></option>
								<option value="1" selected="selected">@localizer["active"]</option>
								<option value="2">@localizer["inactive"]</option>
							</select>
							<!--end::Select2-->
						</div>
						<!--end::Card body-->
					</div>
					<!--end::Status-->
				</div>
				<!--end::Aside column-->
				<!--begin::Main column-->
				<div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
					<!--begin::Basic Information-->
					<div class="card card-flush">
						<!--begin::Card header-->
						<div class="card-header">
							<div class="card-title">
								<h2>@localizer["basic_info"]</h2>
							</div>
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<!--begin::Input group-->
							<div class="mb-5 fv-row">
								<label class="required form-label ms-2">@localizer["membership_name"]</label>
								<input type="text" asp-for="@Model.MembershipName" class="form-control" placeholder="@localizer["enter"] @localizer["membership_name"] @localizer["here"]" />
							</div>
							<!--end::Input group-->
							<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-1 row-cols-lg-2">
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<label class="required form-label ms-2">@localizer["duration"]</label>
									<input type="number" asp-for="@Model.MembershipDuration" class="form-control" placeholder="@localizer["enter"] @localizer["duration"] @localizer["here"]" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<label class="required form-label ms-2">@localizer["duration_type"]</label>
									<select class="form-select" asp-for="@Model.MembershipDurationTypeId" data-control="select2" data-hide-search="true" data-placeholder="@localizer["select_an_option"]" membership-list-filter="status">
										<option></option>
										<option value="1">@localizer["day"]</option>
										<option value="2">@localizer["month"]</option>
										<option value="3">@localizer["year"]</option>
									</select>
								</div>
								<!--end::Input group-->
							</div>
							<!--begin::Input group-->
							<div>
								<label class="form-label ms-2">@localizer["description"]</label>
								<textarea class="form-control" asp-for="@Model.MembershipDescription" data-kt-autosize="true" placeholder="@localizer["enter"] @localizer["description"] @localizer["here"]"></textarea>
							</div>
							<!--end::Input group-->
						</div>
						<!--end::Card header-->
					</div>
					<!--end::General Information-->
					<!--begin::Class Information-->
					<div class="card card-flush">
						<!--begin::Card header-->
						<div class="card-header">
							<div class="card-title">
								<h2>@localizer["classes_info"]</h2>
							</div>
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<!--begin::Input group-->
							<!--begin::Label-->
							<label class="form-label ms-2">@localizer["classes_limitation"]</label>
							<!--end::Label-->
							<!--begin::Class Limitation-->
							<div class="d-flex flex-wrap align-items-center gap-5 mb-7">
								<!--begin::Radio-->
								<div class="form-check form-check-custom form-check-solid">
									<input class="form-check-input" id="limited" asp-for="@Model.ClassIsLimit" type="radio" value="true" checked="checked" />
									<label class="form-check-label text-gray-700" for="limited">@localizer["limited"]</label>
								</div>
								<!--end::Radio-->
								<!--begin::Radio-->
								<div class="form-check form-check-custom form-check-solid">
									<input class="form-check-input" id="unlimited" asp-for="@Model.ClassIsLimit" type="radio" value="false" />
									<label class="form-check-label text-gray-700" for="unlimited">@localizer["unlimited"]</label>
								</div>
								<!--end::Radio-->
							</div>
							<!--end::Class Limitation-->
							<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-1 row-cols-lg-2" data-kt-ecommerce-catalog-add-category="auto-options">
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<label class="required form-label ms-2">@localizer["number_of_classes"]</label>
									<input type="number" asp-for="@Model.ClassLimitDays" class="form-control" placeholder="@localizer["enter"] @localizer["number_of_classes"] @localizer["here"]" min="1" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="col mb-5 fv-row">
									<!--begin::Label-->
									<label class="required form-label ms-2">@localizer["repetition_type"]</label>
									<!--end::Label-->
									<!--begin::Select-->
									<select class="form-select" asp-for="@Model.ClassLimitationId" data-control="select2" data-hide-search="true" data-placeholder="@localizer["select_an_option"]" membership-list-filter="status">
										<option></option>
										<option value="1">Class Every Week</option>
										<option value="2">Class Every Month</option>
									</select>
									<!--end::Select-->
								</div>
								<!--end::Input group-->
							</div>
							<!--end::Input group-->
							<!--begin::Input group-->
							<div class="fv-row">
								<label class="form-label ms-2">@localizer["select_classes"]</label>
								<input class="form-control d-flex align-items-center" placeholder="@localizer["search_by_class_name"]" asp-for="@Model.SelectedClasses" />
							</div>
							<!--end::Input group-->
						</div>
						<!--end::Card header-->
					</div>
					<!--end::Class Information-->
					<!--begin::Pricing Information-->
					<div class="card card-flush">
						<!--begin::Card header-->
						<div class="card-header">
							<div class="card-title">
								<h2>@localizer["pricing_info"]</h2>
							</div>
						</div>
						<!--end::Card header-->
						<!--begin::Card body-->
						<div class="card-body pt-0">
							<div class="row row-cols-1 row-cols-sm-2 rol-cols-md-1 row-cols-lg-2">
								<!--begin::Input group-->
								<div class="col mb-5 mb-sm-5 mb-md-5 mb-lg-0 fv-row">
									<label class="required form-label ms-2">@localizer["price"]</label>
									<input type="number" asp-for="@Model.MembershipAmount" class="form-control" placeholder="@localizer["enter"] @localizer["price"] @localizer["here"]" min="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="col fv-row">
									<label class="required form-label ms-2">@localizer["signup_fee"]</label>
									<input type="number" asp-for="@Model.SignupFee" class="form-control" placeholder="@localizer["enter"] @localizer["signup_fee"] @localizer["here"]" min="0" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
								</div>
								<!--end::Input group-->
							</div>
						</div>
						<!--end::Card header-->
					</div>
					<!--end::Pricing Information-->
					<div class="d-flex justify-content-end px-5">
						<!--begin::Reset Button-->
						<button class="btn btn-light me-5" type="reset">@localizer["reset"]</button>
						<!--end::Reset Button-->
						<!--begin::Button-->
						<button type="submit" id="add_new_membership_form_submit" class="btn btn-primary">
							<span class="indicator-label">@localizer["save"]</span>
							<span class="indicator-progress">
								@localizer["please_wait"]...
								<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
							</span>
						</button>
						<!--end::Button-->
					</div>
				</div>
				<!--end::Main column-->
			</form>
			<!--end::Form-->
		</div>
		<!--end::Content container-->
	</div>
	<!--end::Content-->
</div>
<!--end::Content wrapper-->

@section Scripts {
	<script type="module" src="~/assets/js/customJs/AddNewMembership.js" asp-append-version="true"></script>
}