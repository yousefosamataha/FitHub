					<!--begin:::Tab content-->
					<div class="tab-content" id="myTabContent">
						<!--begin:::Tab pane-->
						<div class="tab-pane fade show active" id="kt_ecommerce_settings_general" role="tabpanel">
							<!--begin::Form-->
							<form id="general_setting_form" class="form" asp-controller="Gym" asp-action="EditSettings" method="post">
								<input type="hidden" asp-for="@Model.GeneralSetting.Id" />
								<!--begin::Input group-->
								<div class="row fv-row mb-7">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="form-label mt-3">@localizer["is_shared"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-9">
										<div class="d-flex mt-3">
											<!--begin::Radio-->
											<div class="form-check form-check-custom form-check-solid me-5">
												<input class="form-check-input" type="radio" value="True" asp-for="@Model.GeneralSetting.IsShared" id="IsShared_yes" />
												<label class="form-check-label" for="IsShared_yes">@localizer["yes"]</label>
											</div>
											<div class="form-check form-check-custom form-check-solid">
												<input class="form-check-input" type="radio" value="False" asp-for="@Model.GeneralSetting.IsShared" id="IsShared_no" />
												<label class="form-check-label" for="IsShared_no">@localizer["no"]</label>
											</div>
											<!--end::Radio-->
										</div>
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Heading-->
								<div class="row mb-7">
									<div class="col-md-9 offset-md-3">
										<h2>@localizer["measurement_units"]</h2>
									</div>
								</div>
								<!--end::Heading-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["weight"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Weight" class="form-control" placeholder="@localizer["enter"] @localizer["weight"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["height"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Height" class="form-control" placeholder="@localizer["enter"] @localizer["height"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["chest"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Chest" class="form-control" placeholder="@localizer["enter"] @localizer["chest"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["waist"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Waist" class="form-control" placeholder="@localizer["enter"] @localizer["waist"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["thing"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Thing" class="form-control" placeholder="@localizer["enter"] @localizer["thing"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["arms"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Arms" class="form-control" placeholder="@localizer["enter"] @localizer["arms"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["fat"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="text" asp-for="@Model.GeneralSetting.Fat" class="form-control" placeholder="@localizer["enter"] @localizer["fat"] @localizer["here"]" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Heading-->
								<div class="row mb-7">
									<div class="col-md-9 offset-md-3">
										<h2>@localizer["membership_alert_message_setting"]</h2>
									</div>
								</div>
								<!--end::Heading-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["reminder_days"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<input type="number" asp-for="@Model.GeneralSetting.ReminderDays" class="form-control" placeholder="@localizer["enter"] @localizer["reminder_days"] @localizer["here"]" style="direction:@(IsRTL ? "rtl" : "ltr" )" />
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row fv-row mb-5">
									<div class="col-md-3 text-md-end">
										<!--begin::Label-->
										<label class="required form-label ms-2 mt-3">@localizer["reminder_message"]</label>
										<!--end::Label-->
									</div>
									<div class="col-md-6">
										<!--begin::Input-->
										<textarea class="form-control min-h-100px" asp-for="@Model.GeneralSetting.ReminderMessage" placeholder="@localizer["enter"] @localizer["reminder_message"] @localizer["here"]"></textarea>
										<!--end::Input-->
									</div>
								</div>
								<!--end::Input group-->
								<!--begin::Action buttons-->
								<div class="row justify-content-center">
									<div class="col-md-6">
										<div class="d-flex justify-content-end px-5">
											<!--begin::Reset Button-->
											<button class="btn btn-light me-5" type="reset">@localizer["reset"]</button>
											<!--end::Reset Button-->
											<!--begin::Button-->
											<button type="submit" id="general_setting_form_submit" class="btn btn-primary">
												<span class="indicator-label">@localizer["save"]</span>
												<span class="indicator-progress">
													@localizer["please_wait"]...
													<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
												</span>
											</button>
											<!--end::Button-->
										</div>
									</div>
								</div>
								<!--end::Action buttons-->
							</form>
							<!--end::Form-->
						</div>
						<!--end:::Tab pane-->
					</div>
					<!--end:::Tab content-->
				</div>
				<!--end::Card body-->
			</div>
			<!--end::Card-->
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
<!--end::Content wrapper-->

@section Scripts {
    <script type="module" src="~/assets/js/customJs/Gym/Settings.js" asp-append-version="true"></script>
}